<Window x:Class="TVPGestion_IPO.Views.navBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVPGestion_IPO.Views"
        mc:Ignorable="d"
        Title="navBar" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- User Info -->
        <StackPanel x:Name="panelUserInfo">
            <Image x:Name="imgPerfil" Source="/Assets/Icons/UserCircleIcon.png" Stretch="Fill" Width="60" Height="60" HorizontalAlignment="Center"/>
            <Label Content="Nombre Usuario" Margin="25,10,25,0" Width="100" Height="26" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Sidebar -->
        <ListBox Grid.Column="0" SelectionMode="Single" SelectionChanged="sidebar_SelectionChanged" x:Name="sidebar" Margin="0,120,0,140" BorderThickness="0">
            <ListBoxItem>
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Image Source="/Assets/Icons/comidaIcon.png" Width="25" Height="25" Margin="0,0,10,0"/>
                    <TextBlock Text="Productos" VerticalAlignment="Center"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Image Source="/Assets/Icons/carritoIcon.png" Width="25" Height="25" Margin="0,0,10,0"/>
                    <TextBlock Text="Pedidos" VerticalAlignment="Center"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Image Source="/Assets/Icons/usersIcon.png" Width="25" Height="25" Margin="0,0,10,0"/>
                    <TextBlock Text="Clientes" VerticalAlignment="Center"/>
                </StackPanel>
            </ListBoxItem>
        </ListBox>

        <!-- SideBar_config -->
        <ListBox Grid.Column="0" SelectionMode="Single" SelectionChanged="sidebar_SelectionChanged" x:Name="sidebar_config" Margin="0,294,0,0" BorderThickness="0" VerticalAlignment="Bottom">
            <ListBoxItem>
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Image Source="/Assets/Icons/infoCircleIcon.png" Width="25" Height="25" Margin="0,0,10,0"/>
                    <TextBlock VerticalAlignment="Center"><Run Language="es-es" Text="Ayuda"/></TextBlock>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Image Source="/Assets/Icons/ajustesPerfilIcon.png" Width="25" Height="25" Margin="0,0,10,0"/>
                    <TextBlock VerticalAlignment="Center"><Run Language="es-es" Text="Editar perfil"/></TextBlock>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal" Margin="3">
                    <Image Source="/Assets/Icons/logoutIcon.png" Width="25" Height="25" Margin="0,0,10,0"/>
                    <TextBlock VerticalAlignment="Center"><Run Language="es-es" Text="Logout"/></TextBlock>
                </StackPanel>
            </ListBoxItem>
        </ListBox>

        <Frame Grid.Column="1" x:Name="navframe" NavigationUIVisibility="Hidden" Background="#e9ecef"/>


    </Grid>
</Window>
