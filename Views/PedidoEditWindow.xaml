<Window x:Class="TVPGestion_IPO.Views.PedidoEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVPGestion_IPO.Views"
        mc:Ignorable="d"
        Title="PedidoEditWindow" Height="520" Width="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titulo -->
        <TextBlock Grid.Row="0" Text="Editar Pedido" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Contenido en dos columnas -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Columna izquierda -->
                <StackPanel Grid.Column="0">
                    <!-- Id -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Id" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <TextBox x:Name="TxtId" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True"/>
                    </StackPanel>

                    <!-- Fecha y Hora Realizacion -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Fecha y Hora" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <TextBox x:Name="TxtFechaRealizacion" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Text="{Binding FechaHoraRealizacion, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Medio (ComboBox) -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Medio" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <ComboBox x:Name="CmbMedio" 
                                  Height="36"
                                  FontSize="14"
                                  VerticalContentAlignment="Center"
                                  ItemsSource="{Binding MediosDisponibles}"
                                  SelectedItem="{Binding Medio, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Modalidad (ComboBox) -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Modalidad" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <ComboBox x:Name="CmbModalidad" 
                                  Height="36"
                                  FontSize="14"
                                  VerticalContentAlignment="Center"
                                  ItemsSource="{Binding ModalidadesDisponibles}"
                                  SelectedItem="{Binding Modalidad, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Fecha Recogida -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Fecha Recogida (Opcional)" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <TextBox x:Name="TxtFechaRecogida" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Text="{Binding FechaHoraRecogida, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Cliente Id -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Cliente Id" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <TextBox x:Name="TxtClienteId" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Text="{Binding ClienteId, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Columna derecha -->
                <StackPanel Grid.Column="2">
                    <!-- Productos -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Productos" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <TextBox x:Name="TxtProductos" 
                                 Style="{StaticResource RoundedTextBox}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="60"
                                 Text="{Binding ProductosString, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Importe Total -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Importe Total" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <TextBox x:Name="TxtImporteTotal" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Text="{Binding ImporteTotal, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Forma Pago -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Forma de Pago" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <TextBox x:Name="TxtFormaPago" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Text="{Binding FormaPago, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Estado (ComboBox) -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Estado" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <ComboBox x:Name="CmbEstado" 
                                  Height="36"
                                  FontSize="14"
                                  VerticalContentAlignment="Center"
                                  ItemsSource="{Binding EstadosDisponibles}"
                                  SelectedItem="{Binding Estado, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Direccion Entrega -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Direccion Entrega" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <TextBox x:Name="TxtDireccion" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Text="{Binding DireccionEntrega, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Coste Envio -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Coste Envio" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <TextBox x:Name="TxtCosteEnvio" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Text="{Binding CosteEnvio, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Envio Gratis Canjeado -->
                    <StackPanel Margin="0,0,0,12" Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox x:Name="ChkEnvioGratis" 
                                  IsChecked="{Binding EnvioGratisCanjeado, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Envio Gratis Canjeado" FontWeight="Bold" Foreground="#065386" Padding="5,0,0,0"/>
                    </StackPanel>

                    <!-- Puntos Ganados -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Puntos Ganados" FontWeight="Bold" Foreground="#065386" Padding="0,0,0,5"/>
                        <TextBox x:Name="TxtPuntosGanados" 
                                 Style="{StaticResource RoundedTextBox}"
                                 Text="{Binding PuntosGanados, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Botones -->
        <StackPanel x:Name="btns" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="BtnCancelar" Content="Cancelar" Width="100" Height="36" Margin="0,0,10,0"
        Background="#e9ecef" Click="BtnCancelar_Click"/>

            <Button x:Name="BtnGuardar" Content="Guardar" Width="100" Height="36"
        Background="#065386" Foreground="White" FontWeight="Bold" Click="BtnGuardar_Click"/>
        </StackPanel>
    </Grid>
</Window>