<Page x:Class="TVPGestion_IPO.Views.PedidosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVPGestion_IPO.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PedidosPage" Background="White">

    <Grid>

        <Label x:Name="lblPedidos" Content="Gestion de Pedidos" Height="50" Margin="28,10,0,0" Width="740" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" FontWeight="Bold"/>

        <!-- Barra de busqueda -->
        <Grid Name="Search" HorizontalAlignment="Left" Margin="28,70,0,0" VerticalAlignment="Top" Width="220" Height="32">
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="White">
                <TextBox x:Name="SearchBox"
                     Width="220"
                     Height="32"
                     VerticalContentAlignment="Center"
                     Padding="32,0,5,0"
                     FontSize="14"
                     BorderThickness="0"
                     Background="Transparent"
                     TextChanged="SearchBox_TextChanged"/>
            </Border>
            <Image Source="/Assets/Icons/lupaIcon.png"
                   Width="20"
                   Height="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="8,0,0,0"
                   IsHitTestVisible="False"/>
        </Grid>

        <!-- Boton anadir pedido -->
        <Button x:Name="BtnAddPedido"
                Width="137"
                Height="32"
                HorizontalAlignment="Right"
                Click="BtnAddPedido_Click"
                Background="#e9ecef"
                BorderBrush="#ccc"
                FontSize="14"
                Margin="0,70,28,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Assets/Icons/addIcon.png"
                       Width="20"
                       Height="20"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
                <TextBlock Text="Anadir pedido" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <!-- Tabla de pedidos -->
        <DataGrid x:Name="PedidosDataGrid"
                  Margin="28,130,28,20"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F5F5F5"
                  GridLinesVisibility="Horizontal"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="#FFE0F1FE">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#065386"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <!--Editar Pedido-->
                <DataGridTemplateColumn x:Name="Editar" Header="" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Background="Transparent" BorderThickness="0" Padding="0"
                                Click="BtnEditPedido_Click">
                                <Image Source="/Assets/Icons/editarIcon.png" Width="25" Height="25"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--Borrar Pedido-->
                <DataGridTemplateColumn Header="" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Background="Transparent" BorderThickness="0" Padding="0"
                                    Click="BtnDeletePedido_Click">
                                <Image Source="/Assets/Icons/borrarIcon.png" Width="25" Height="25"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--Campos especificos-->
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaHoraRealizacion}" Width="150"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding ClienteId}" Width="100"/>
                <DataGridTextColumn Header="Productos" Binding="{Binding ProductosString}" Width="200"/>
                <DataGridTextColumn Header="Importe" Binding="{Binding ImporteTotal}" Width="100"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
