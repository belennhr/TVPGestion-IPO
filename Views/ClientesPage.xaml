<Page x:Class="TVPGestion_IPO.Views.ClientesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVPGestion_IPO.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientesPage" Background="White">

    <Grid>
        <Label Content="Gestión de Clientes" Height="50" Margin="28,10,0,0" Width="740" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" FontWeight="Bold"/>


        <!-- Barra de búsqueda -->
        <Grid Name="Search" HorizontalAlignment="Left" Margin="28,70,0,0" VerticalAlignment="Top" Width="220" Height="32">
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Background="White">
                <TextBox x:Name="SearchBox"
                     Width="220"
                     Height="32"
                     VerticalContentAlignment="Center"
                     Padding="32,0,5,0"
                     FontSize="14"
                     BorderThickness="0"
                     Background="Transparent"
                     TextChanged="SearchBox_TextChanged"/>
            </Border>
            <Image Source="/Assets/Icons/lupaIcon.png"
               Width="20"
               Height="20"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Margin="8,0,0,0"
               IsHitTestVisible="False"/>
        </Grid>
        <!-- Botón añadir cliente -->
        <Button x:Name="BtnAddCliente"
        Width="137"
        Height="32"
        HorizontalAlignment="Right"
        Click="BtnAddCliente_Click"
        Background="#e9ecef"
        BorderBrush="#ccc"
        FontSize="14"
        Margin="0,70,28,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Assets/Icons/addIcon.png"
               Width="20"
               Height="20"
               VerticalAlignment="Center"
               Margin="0,0,5,0"/>
                <TextBlock Text="Añadir cliente" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <!-- DataGrid de clientes -->
        <DataGrid x:Name="ClientesDataGrid"
                  Margin="28,130,28,20"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F5F5F5"
                  GridLinesVisibility="Horizontal"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Background="#FFE0F1FE">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#065386"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <!--Editar Clientes-->
                <DataGridTemplateColumn x:Name="Editar" Header="" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Background="Transparent" BorderThickness="0" Padding="0"
                                    Click="BtnEditCliente_Click">
                                <Image Source="/Assets/Icons/editarIcon.png" Width="25" Height="25"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--Borrar Clientes-->
                <DataGridTemplateColumn Header="" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Background="Transparent" BorderThickness="0" Padding="0"
                                    Click="BtnDeleteCliente_Click">
                                <Image Source="/Assets/Icons/borrarIcon.png" Width="25" Height="25"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <!-- Campos especificos-->
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="100"/>
                <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="120"/>
                <DataGridTextColumn Header="Direcciones" Binding="{Binding DireccionesString}" Width="180"/>
                <DataGridTextColumn Header="Teléfonos" Binding="{Binding TelefonosString}" Width="100"/>
                <DataGridTextColumn Header="Emails" Binding="{Binding EmailsString}" Width="120"/>
                <DataGridTextColumn Header="Alergias" Binding="{Binding AlergiasString}" Width="100"/>
                <DataGridTextColumn Header="Forma de pago" Binding="{Binding FormaPago}" Width="80"/>
                <DataGridTextColumn Header="Puntos" Binding="{Binding PuntosAcumulados}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
