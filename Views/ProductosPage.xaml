<Page x:Class="TVPGestion_IPO.Views.ProductosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVPGestion_IPO.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductosPage" Background="White">

    <Grid>

        <Label x:Name="lblProductos" Content="Gestión de Productos" Height="50" Margin="28,10,0,0" Width="740" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="25" FontWeight="Bold"/>

        <!-- Barra de búsqueda -->
        <Grid Name="Search" HorizontalAlignment="Left" Margin="28,70,0,0" VerticalAlignment="Top" Width="220" Height="32">
            <TextBox x:Name="SearchBox"
                     Width="220"
                     Height="32"
                     VerticalContentAlignment="Center"
                     Padding="32,0,5,0"
                     FontSize="14"
                     TextChanged="SearchBox_TextChanged"/>
            <Image Source="/Assets/Icons/lupaIcon.png"
                   Width="20"
                   Height="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="8,0,0,0"
                   IsHitTestVisible="False"/>
        </Grid>

        <!-- Botón añadir producto -->
        <Button x:Name="BtnAddProducto"
                Width="137"
                Height="32"
                HorizontalAlignment="Right"
                Click="BtnAddProducto_Click"
                Background="#e9ecef"
                BorderBrush="#ccc"
                FontSize="14"
                Margin="0,70,28,0" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Assets/Icons/addIcon.png"
                       Width="20"
                       Height="20"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>
                <TextBlock Text="Añadir producto" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <DataGrid x:Name="ProductosDataGrid"
          Margin="28,130,28,20"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          AlternatingRowBackground="#F5F5F5"
          GridLinesVisibility="All"
          CanUserAddRows="False"
          IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="/Assets/Icons/editarIcon.png" Width="40" Height="40"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" Width="100"/>
                <DataGridTextColumn Header="Subcategoría" Binding="{Binding Subcategoria}" Width="100"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Precio}" Width="80"/>
                <DataGridTextColumn Header="Alergenos" Binding="{Binding AlergenosString}" Width="150"/>
                <DataGridTextColumn Header="Ingredientes" Binding="{Binding IngredientesString}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
